@model LoginInputModel
@{
    ViewData["Title"] = "Login";
}

<div class="row">
    <div class="col-12">
        <form asp-action="Login" asp-controller="Account" method="post">
            <div class="form-group row mb-1">
                <h3>Login</h3>
            </div>
            <div class="form-group row mb-1">
                <label asp-for="UserName" class="col-form-label col-2 text-end"></label>
                <div class="col-4">
                    <input type="text" asp-for="UserName" class="form-control form-control-sm" />
                    <span class="text-danger" style="font-size:small" asp-validation-for="UserName"></span>
                </div>
            </div>
            <div class="form-group row mb-1">
                <label asp-for="Password" class="col-form-label col-2 text-end"></label>
                <div class="col-4">
                    <input type="password" asp-for="Password" class="form-control form-control-sm" />
                    <span class="text-danger" style="font-size:small" asp-validation-for="Password"></span>
                </div>
            </div>

            <div class="form-group row mb-1">

                <div class="col-4 offset-2 text-end">
                    <div class="form-check">
                        <button type="submit" class="btn btn-primary btn-sm">Login</button>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>
@section scripts {
    <script src="~/libs/jquery/jquery.js"></script>
    <script src="~/libs/validate/jquery.validate.js"></script>

    <script src="~/libs/validate/jquery.validate.unobtrusive.js"></script>
}

